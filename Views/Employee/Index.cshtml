@model IEnumerable<EmployeeAttendance.Models.EmpDetails>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Mobile No</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
<tr>
    <td>@employee.EmpId</td>
    <td>@employee.Name</td>
    <td>@employee.Dept</td>
    <td>@employee.MobileNo</td>
    <td>
        <a asp-controller="Employee" asp-action="MarkAttendance" asp-route-id="@employee.EmpId"
           class="mark-attendance-link" data-action="mark" data-return-url="Employee/MarkAttendance">Mark Attendance</a>
        <a asp-controller="Employee" asp-action="ModifySalary" asp-route-id="@employee.EmpId"
           class="modify-salary-link" data-action="salary" data-return-url="Employee/ModifySalary">Modify Salary</a>
    </td>
</tr>}
    </tbody>
</table>

<a asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-primary">Create New Employee</a>